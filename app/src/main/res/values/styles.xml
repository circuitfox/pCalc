<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="multiButtonViewStyle">@style/MultiButtonView</item>
    </style>

    <style name="MultiButtonView" parent="@style/Widget.AppCompat.Button">
        <item name="smallTextSize">6sp</item>
        <item name="textSize">14sp</item>
        <item name="topButtonText"/>
        <item name="bottomButtonText"/>
        <item name="leftButtonText"/>
        <item name="rightButtonText"/>
        <item name="android:text"/>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
</resources>
