            android:id="@+id/result"
            app:layout_columnWeight="1"
            app:layout_columnSpan="3"
            app:layout_rowWeight="1"
            android:textAlignment="textEnd"
            android:gravity="center_vertical|end"
            android:textSize="28sp"/>

